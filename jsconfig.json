{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "App/*": ["src/*"],
      "Api/*": ["src/api/*"],
      "Components/*": ["src/components/*"],
      "Containers/*": ["src/containers/*"],
      "Sagas/*": ["src/sagas/*"],
      "Selectors": ["src/selectors/*"],
      "Store": ["src/store/*"],
      "Routes": ["src/routes/*"],
      "Utils": ["src/utils/*"],
      "Core": ["src/core/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}